<idea-plugin version="2">
    <id>com.kulwant.diffclip</id>
    <name>Apply Diff from Clipboard</name>
    <version>0.1.0</version>
    <vendor email="kulwant@example.com" url="https://yourdomain.com">Kulwant</vendor>

    <description>
        Apply diffs copied into the clipboard directly into project files â€” supports malformed diffs like those produced by AI agents.
    </description>

    <!-- Ensure it works in all IDEs built on IntelliJ -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <!-- Unique ID & shortcut -->
        <action id="com.kulwant.diffclip.ApplyAgentDiffAction"
                class="com.yourorg.ApplyDiffAction"
                text="Apply Diff from Clipboard (AI-Tolerant)"
                description="Applies malformed or partial diffs from clipboard into the current editor."
                icon="/icons/diff.svg">

            <!-- Add menu entry for manual testing -->
            <add-to-group group-id="ToolsMenu" anchor="last"/>

            <!-- Add a keyboard shortcut (safe, unused combination) -->
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift D"/>
        </action>
    </actions>
</idea-plugin>
